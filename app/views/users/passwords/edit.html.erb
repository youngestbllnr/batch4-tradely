
<% content_for :title, "Chnange Password / Tradely" %>
<!-- Chnange Password Page -->
<div id="change-password" class="page">
    <div class="page-background"></div>
    <div class="page-foreground">
        <header id="brand">
          <a href="/" class="no-underline">
            <p class="logo bloop">Tradely</p>
          </a>
        </header>
        <main id="form">
            <p id="emoji">ðŸ”‘</p>
            <p id="header">Change Password</p>
            <p id="sub-header">Please create a new password for your tradely account.</p>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <% resource.errors.full_messages.each do |msg| %>
                <p class="notice-float"><%= msg.split(". ").each { |sentence| sentence.capitalize }.join(". ") %></p>
              <% end %>

              <%= f.hidden_field :reset_password_token %>

              <div class="field">
                <%= f.password_field :password, autofocus: true, placeholder: "New Password", autocomplete: "new-password", required: true %>
              </div>

              <div class="field">
                <%= f.password_field :password_confirmation, placeholder: "Confirm New Password", autocomplete: "new-password", required: true %>
              </div>

              <div class="actions absolute">
                <%= f.submit "Change Password", class: "cta" %>
              </div>
            <% end %>
        </main>
    </div>
</div>
