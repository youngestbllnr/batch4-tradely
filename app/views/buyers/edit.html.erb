<% content_for :title, "Edit Buyer / Tradely" %>
<% content_for :layer_foreground_class, "relative-foreground" %>
<div id="new-buyer" class="page form">
    <div class="page-accent gradient"></div>
    <!-- Navigation Bar -->
    <header id="nav">
        <p class="header">Edit Buyer</p>
        <!-- Back Button -->
        <div id="left">
            <a href="/buyers" class="in-text no-underline">
                <div id="back-btn">
                    <i class="icon fal fa-arrow-left"></i>
                </div>
            </a>
        </div>
    </header>
    <!-- Edit Buyer -->
    <main id="buyer-form">
        <div id="guide">
            <!-- Header -->
            <div class="card">
                <p id="header">Edit Buyer Form</p>                                                           
            </div>
            <!-- Terms -->
            <div id="terms" class="card" style="display: block;">
                <p class="term">üôã‚Äç‚ôÇÔ∏è Manually edit a buyer account's first name, last name, email, or password below.</p>
            </div>
        </div>
        <!-- Form -->
        <div id="form">
            <%= form_with(model: @buyer, url: buyer_path(@buyer), method: :patch) do |form| %>
                <%= @buyer.errors.full_messages.first if @buyer.errors.any? %>

                <div class="field">
                    <%= form.label :firstname, "üßë Enter buyer's first name" %>
                    <%= form.text_field :firstname, placeholder: "First Name", autocomplete: "firstname", required: true %>
                </div>

                <div class="field">
                    <%= form.label :lastname, "üë™ Enter buyer's last name" %>
                    <%= form.text_field :lastname, placeholder: "Last Name", autocomplete: "lastname", required: true %>
                </div>

                <div class="field">
                    <%= form.label :email, "üë™ Enter buyer's email address" %>
                    <%= form.text_field :email, placeholder: "Email Address", autocomplete: "email", required: true %>
                </div>

                <div class="field">
                    <%= form.label :password, "üîë Enter buyer's password" %>
                    <%= form.password_field :password, placeholder: "Password", autocomplete: "new-password", required: true %>
                </div>

                <div class="field">
                    <%= form.label :password_confirmation, "üîê Confirm buyer's password" %>
                    <%= form.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "confirm-password", required: true %>
                </div>
                
                <div class="actions">
                    <%= form.submit "Submit", class: "cta" %>
                    <%= link_to "Cancel", buyers_path, class: "sub-cta" %>
                </div>
            <% end %>
        </div>
    </main>
</div>