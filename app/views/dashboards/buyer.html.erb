<% content_for :title, "Dashboard / Tradely" %>
<% content_for :layer_foreground_class, "foreground" %>
<% content_for :layer_background_class, "background" %>
<% content_for :notice_float_position, "bottom" %>
<!-- Index Page -->
<div id="index" class="dashboard">
    <%= render "buyers/_shared/sidebar" %>
    <main id="body">
        <header>
            <h1 id="header"><span class="icon">ðŸ’µ</span> Buy Stocks</h1>
        </header>
        <main>
            <div id="table" class="card market">
                <div id="headers" class="row">
                    <p class="column">Company Name</p>
                    <p class="column">Price</p>
                    <p class="column">Broker</p>
                    <p class="column">--</p>
                </div>
                <% @stocks.each do |brokers_stock| %>
                    <div id="stock_<%= brokers_stock.id %>" class="row">
                        <p class="column"><%= "#{brokers_stock.stock.name} (#{brokers_stock.stock.symbol})" %></p>
                        <p class="column"><%= currency(brokers_stock.stock.price) %></p>
                        <p class="column"><%= brokers_stock.user.email %></p>
                        <%= link_to new_transaction_path(:broker_id => brokers_stock.user.id, :stock_id => brokers_stock.stock.id), class: "in-text" do %>
                            <p class="column">Buy Stocks</p>
                        <% end %>
                    </div>
                <% end %>            
            </div>
        </main>
    </main>
</div>